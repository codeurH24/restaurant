{% extends 'base.html.twig' %}

{% block title %}Hello RoomServiceController!{% endblock %}

{% block body %}
<style>
    div {
        border: 1px solid black;
    }

    html, body{
        width: 100%;
        height: 100%;
    }


    .table {
        display: table;
        width: 100%;
        height: 100%;
    }
    .table-row {
        display: table-row;
    }
    .table-cell {
        display: table-cell;
    }

    button {
        min-height: 2rem;
        padding: 1rem;
        font-size: 1.7rem;
    }

</style>


<div class="table">
    <div class="table-row">
        <div class="container-fluid">
            <div class="row">
                <div class="col">
                    Liste
                </div>
                <div class="col">
                    Actions
                </div>
                <div class="col">
                    Choix salle
                </div>
            </div>
        </div>
    </div>
    <div class="table-row" style="height:65%">
        <div class="container-fluid">
            <div class="row">
                <div class="col-12">
                    <button>Categorie 1 </button>
                    <button>Categorie 2 </button>
                    <button>Categorie 3 </button>
                </div>
                <div class="col-12">
                    {% for i in 1..6 %}
                        {% for j in 1..6 %}
                            <button>Bouton {{ i }}{{ j }} </button>
                        {% endfor %}
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>
    <div class="table-row" style="height:12%">
        <div class="container-fluid">
            <div class="row">
                <div class="col-12">
                        {% for i in 1..10 %}
                            <button>Bouton {{ i }} </button>
                        {% endfor %}
                </div>
            </div>
        </div>
    </div>
</div>



{% endblock %}
