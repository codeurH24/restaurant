{% extends 'base.html.twig' %}

{% block title %}Desire index{% endblock %}

{% block body %}
    <h1>Desire index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Step</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for desire in desires %}
            <tr>
                <td>{{ desire.id }}</td>
                <td>{{ desire.step }}</td>
                <td>
                    <a href="{{ path('desire_show', {'id': desire.id}) }}">show</a>
                    <a href="{{ path('desire_edit', {'id': desire.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('desire_new') }}">Create new</a>
{% endblock %}
